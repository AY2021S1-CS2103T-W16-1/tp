<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox styleClass="command-box" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <TextField fx:id="commandTextField" HBox.hgrow="ALWAYS" onAction="#handleCommandEntered" promptText="Enter command here..."/>
    <Button fx:id="sendButton" alignment="TOP_LEFT" text="Send" StackPane.alignment="CENTER_RIGHT">
        <StackPane.margin>
            <Insets right="20.0"/>
        </StackPane.margin>
    </Button>
</HBox>
